<Window x:Class="WeighbridgeSoftwareYashCotex.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Weighbridge Software - YASH COTEX" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="#2E86C1" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Logo Section -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="dotnet_bot.png" Width="40" Height="40" Margin="0,0,10,0"/>
                    <StackPanel>
                        <Label Content="YASH COTEX" FontSize="18" FontWeight="Bold" Foreground="White"/>
                        <Label Content="Weighbridge Software" FontSize="12" Foreground="LightGray"/>
                    </StackPanel>
                </StackPanel>

                <!-- Company Info Section -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Label Content="COMPANY ADDRESS HERE" FontSize="14" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                    <Label Content="Phone: +91-9876543210 | Email: info@yashcotex.com" FontSize="12" Foreground="LightGray" HorizontalAlignment="Center"/>
                    <Label Content="GSTIN: 22AAAAA0000A1Z5" FontSize="12" Foreground="LightGray" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Date/Time Section -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <Label x:Name="CurrentDateTime" FontSize="14" FontWeight="Bold" Foreground="White" HorizontalAlignment="Right"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Camera Feeds Section -->
            <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,15,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Camera 1 -->
                <Border Grid.Row="0" Grid.Column="0" Background="Black" Margin="5">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Label Content="📹" FontSize="48" Foreground="White" HorizontalAlignment="Center"/>
                        <Label Content="Camera 1" FontSize="14" Foreground="White" HorizontalAlignment="Center"/>
                        <Label Content="Entry View" FontSize="12" Foreground="Gray" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Camera 2 -->
                <Border Grid.Row="0" Grid.Column="1" Background="Black" Margin="5">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Label Content="📹" FontSize="48" Foreground="White" HorizontalAlignment="Center"/>
                        <Label Content="Camera 2" FontSize="14" Foreground="White" HorizontalAlignment="Center"/>
                        <Label Content="Exit View" FontSize="12" Foreground="Gray" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Camera 3 -->
                <Border Grid.Row="1" Grid.Column="0" Background="Black" Margin="5">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Label Content="📹" FontSize="48" Foreground="White" HorizontalAlignment="Center"/>
                        <Label Content="Camera 3" FontSize="14" Foreground="White" HorizontalAlignment="Center"/>
                        <Label Content="Side View" FontSize="12" Foreground="Gray" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Camera 4 -->
                <Border Grid.Row="1" Grid.Column="1" Background="Black" Margin="5">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Label Content="📹" FontSize="48" Foreground="White" HorizontalAlignment="Center"/>
                        <Label Content="Camera 4" FontSize="14" Foreground="White" HorizontalAlignment="Center"/>
                        <Label Content="Overview" FontSize="12" Foreground="Gray" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Live Weight Display -->
            <Border Grid.Row="0" Grid.Column="1" Background="#E8F4FD" Padding="20">
                <StackPanel VerticalAlignment="Center">
                    <Label Content="LIVE WEIGHT" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                    
                    <Border Background="Black" Padding="15" HorizontalAlignment="Stretch" Margin="0,15,0,15">
                        <StackPanel>
                            <Label x:Name="LiveWeight" Content="0.00" FontSize="36" FontWeight="Bold" 
                                   Foreground="Lime" HorizontalAlignment="Center"/>
                            <Label Content="KG" FontSize="14" Foreground="White" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <Label Content="Status:" FontSize="12" VerticalAlignment="Center"/>
                            <Label x:Name="StabilityIndicator" Content="STABLE" FontSize="12" FontWeight="Bold" 
                                   Foreground="Green" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,4">
                            <Label Content="Connection:" FontSize="12" VerticalAlignment="Center"/>
                            <Label x:Name="ConnectionStatus" Content="Connected" FontSize="12" FontWeight="Bold" 
                                   Foreground="Green" VerticalAlignment="Center"/>
                        </StackPanel>

                        <Label x:Name="LastUpdated" Content="Last Updated: --:--:--" FontSize="10" 
                               Foreground="Gray" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Button Bar -->
        <Grid Grid.Row="2" Background="#34495E" Margin="20,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" x:Name="EntryButton" Content="ENTRY (F1)" Background="#27AE60" Foreground="White"
                    FontSize="14" FontWeight="Bold" Click="EntryButton_Clicked" Margin="5"/>
            <Button Grid.Column="1" x:Name="ExitButton" Content="EXIT (F2)" Background="#E74C3C" Foreground="White"
                    FontSize="14" FontWeight="Bold" Click="ExitButton_Clicked" Margin="5"/>
            <Button Grid.Column="2" x:Name="PrintButton" Content="PRINT (F3)" Background="#3498DB" Foreground="White"
                    FontSize="14" FontWeight="Bold" Click="PrintButton_Clicked" Margin="5"/>
            <Button Grid.Column="3" x:Name="SettingsButton" Content="SETTINGS (F4)" Background="#9B59B6" Foreground="White"
                    FontSize="14" FontWeight="Bold" Click="SettingsButton_Clicked" Margin="5"/>
            <Button Grid.Column="4" x:Name="LogoutButton" Content="LOGOUT (F5)" Background="#E67E22" Foreground="White"
                    FontSize="14" FontWeight="Bold" Click="LogoutButton_Clicked" Margin="5"/>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="3" Background="#2C3E50" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Label Content="Scale Status:" FontSize="12" Foreground="LightGray" VerticalAlignment="Center"/>
                    <Label x:Name="ScaleStatus" Content="Active" FontSize="12" FontWeight="Bold" 
                           Foreground="Lime" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <Label x:Name="LatestOperation" Content="System Ready" FontSize="12" 
                           Foreground="White" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                    <Label Content="Device: COM1 | User: Admin" FontSize="12" Foreground="LightGray"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

</Window>