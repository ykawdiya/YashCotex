<UserControl x:Class="WeighbridgeSoftwareYashCotex.Views.ExitControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <UserControl.Resources>
        <!-- Minimal Styles -->
        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>
        
        <Style x:Key="FieldTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="25,12"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <Style x:Key="ExitButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#DC3545"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style x:Key="SearchButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#007BFF"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Resources>
    
    <Border Background="White" CornerRadius="10" Padding="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock Text="🚚 VEHICLE EXIT" FontSize="28" FontWeight="Bold" 
                           HorizontalAlignment="Center" Foreground="#2C3E50"/>
                <Rectangle Fill="#DC3545" Height="3" Width="150" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
            
            <!-- Content -->
            <Grid Grid.Row="1" MaxWidth="700">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Search Section -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="🔍 SEARCH VEHICLE" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" Foreground="#DC3545"/>
                    
                    <StackPanel>
                        <TextBlock Text="Vehicle Number *" Style="{StaticResource FieldLabelStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox x:Name="SearchVehicleTextBox" Grid.Column="0"
                                     Style="{StaticResource FieldTextBoxStyle}"
                                     CharacterCasing="Upper" MaxLength="10"
                                     TextChanged="SearchVehicleTextBox_TextChanged"/>
                            <Button Grid.Column="2" Content="🔍 SEARCH" 
                                    Style="{StaticResource SearchButtonStyle}"
                                    Click="SearchButton_Click"/>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Entry Details Display -->
                    <Border x:Name="EntryDetailsPanel" Background="#F8F9FA" BorderBrush="#DEE2E6" 
                            BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,20,0,0" Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="📋 ENTRY DETAILS" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="RST No:" FontWeight="Bold"/>
                                <TextBlock x:Name="EntryRstNumber" Grid.Row="0" Grid.Column="1" Text="-"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Customer:" FontWeight="Bold"/>
                                <TextBlock x:Name="EntryCustomer" Grid.Row="1" Grid.Column="1" Text="-"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Phone:" FontWeight="Bold"/>
                                <TextBlock x:Name="EntryPhone" Grid.Row="2" Grid.Column="1" Text="-"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Material:" FontWeight="Bold"/>
                                <TextBlock x:Name="EntryMaterial" Grid.Row="3" Grid.Column="1" Text="-"/>
                                
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Entry Weight:" FontWeight="Bold"/>
                                <TextBlock x:Name="EntryWeight" Grid.Row="4" Grid.Column="1" Text="-" Foreground="#28A745"/>
                                
                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Entry Time:" FontWeight="Bold"/>
                                <TextBlock x:Name="EntryTime" Grid.Row="5" Grid.Column="1" Text="-"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
                
                <!-- Exit Weight Section -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="⚖️ EXIT WEIGHT" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" Foreground="#DC3545"/>
                    
                    <!-- Current Weight Display -->
                    <Border Background="#1A1A1A" BorderBrush="#DC3545" BorderThickness="2" 
                            CornerRadius="8" Padding="20">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBox x:Name="ExitWeightTextBox" 
                                     IsReadOnly="True" Background="Transparent" BorderThickness="0"
                                     FontWeight="Bold" FontSize="32" TextAlignment="Center"
                                     Foreground="#00FF41" Text="0.00" FontFamily="Consolas"/>
                            <TextBlock Text="KILOGRAMS" FontWeight="Bold" FontSize="12" 
                                       Foreground="#888" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Weight Summary -->
                    <Border x:Name="WeightSummaryPanel" Background="#FFF3CD" BorderBrush="#F0C649" 
                            BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,20,0,0" Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="📊 WEIGHT SUMMARY" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Entry Weight:" FontWeight="Bold"/>
                                <TextBlock x:Name="SummaryEntryWeight" Grid.Row="0" Grid.Column="1" Text="0.00 KG" Foreground="#28A745"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Exit Weight:" FontWeight="Bold"/>
                                <TextBlock x:Name="SummaryExitWeight" Grid.Row="1" Grid.Column="1" Text="0.00 KG" Foreground="#DC3545"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Net Weight:" FontWeight="Bold"/>
                                <TextBlock x:Name="SummaryNetWeight" Grid.Row="2" Grid.Column="1" Text="0.00 KG" Foreground="#007BFF" FontWeight="Bold"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
            
            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                <Button Content="🚚 COMPLETE EXIT" x:Name="ExitButton" 
                        Style="{StaticResource ExitButtonStyle}"
                        Click="ExitButton_Click" IsEnabled="False"/>
                <Button Content="🔄 RESET" x:Name="ResetButton" 
                        Style="{StaticResource SearchButtonStyle}"
                        Click="ResetButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>