<UserControl x:Class="WeighbridgeSoftwareYashCotex.Views.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <UserControl.Resources>
        <!-- Styles -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style x:Key="ActiveTabButtonStyle" TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
            <Setter Property="Background" Value="#007BFF"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
        
        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>
        
        <Style x:Key="FieldTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <Style x:Key="FieldComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <Style x:Key="SaveButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#28A745"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style x:Key="ResetButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#FFC107"/>
            <Setter Property="Foreground" Value="#212529"/>
        </Style>
    </UserControl.Resources>
    
    <Border Background="White" CornerRadius="10" Padding="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock Text="⚙️ SYSTEM SETTINGS" FontSize="28" FontWeight="Bold" 
                           HorizontalAlignment="Center" Foreground="#2C3E50"/>
                <Rectangle Fill="#6F42C1" Height="3" Width="150" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
            
            <!-- Tab Navigation -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <Button x:Name="CompanyTabButton" Content="🏢 Company" Style="{StaticResource ActiveTabButtonStyle}" Click="CompanyTabButton_Click"/>
                <Button x:Name="WeighbridgeTabButton" Content="⚖️ Weighbridge" Style="{StaticResource TabButtonStyle}" Click="WeighbridgeTabButton_Click"/>
                <Button x:Name="DatabaseTabButton" Content="💾 Database" Style="{StaticResource TabButtonStyle}" Click="DatabaseTabButton_Click"/>
                <Button x:Name="SystemTabButton" Content="🖥️ System" Style="{StaticResource TabButtonStyle}" Click="SystemTabButton_Click"/>
            </StackPanel>
            
            <!-- Content Area -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <Grid>
                <!-- Company Settings -->
                <StackPanel x:Name="CompanySettingsPanel" Visibility="Visible">
                    <TextBlock Text="🏢 COMPANY INFORMATION" Style="{StaticResource SectionHeaderStyle}"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Company Name *" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox x:Name="CompanyNameTextBox" Text="YASH COTEX PRIVATE LIMITED" Style="{StaticResource FieldTextBoxStyle}"/>
                            
                            <TextBlock Text="Address Line 1 *" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox x:Name="Address1TextBox" Text="Industrial Area, Phase 1" Style="{StaticResource FieldTextBoxStyle}"/>
                            
                            <TextBlock Text="Address Line 2" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox x:Name="Address2TextBox" Text="Sector 58, Mohali" Style="{StaticResource FieldTextBoxStyle}"/>
                            
                            <TextBlock Text="City *" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox x:Name="CityTextBox" Text="Mohali" Style="{StaticResource FieldTextBoxStyle}"/>
                            
                            <TextBlock Text="State *" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox x:Name="StateTextBox" Text="Punjab" Style="{StaticResource FieldTextBoxStyle}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="PIN Code *" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox x:Name="PinCodeTextBox" Text="160059" Style="{StaticResource FieldTextBoxStyle}"/>
                            
                            <TextBlock Text="Phone Number *" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox x:Name="PhoneTextBox" Text="+91-9876543210" Style="{StaticResource FieldTextBoxStyle}"/>
                            
                            <TextBlock Text="Email Address" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox x:Name="EmailTextBox" Text="info@yashcotex.com" Style="{StaticResource FieldTextBoxStyle}"/>
                            
                            <TextBlock Text="GST Number" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox x:Name="GstNumberTextBox" Text="22AAAAA0000A1Z5" Style="{StaticResource FieldTextBoxStyle}"/>
                            
                            <TextBlock Text="License Number" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox x:Name="LicenseNumberTextBox" Text="WB/2024/001" Style="{StaticResource FieldTextBoxStyle}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
                
                <!-- Weighbridge Settings -->
                <StackPanel x:Name="WeighbridgeSettingsPanel" Visibility="Collapsed">
                    <TextBlock Text="⚖️ WEIGHBRIDGE CONFIGURATION" Style="{StaticResource SectionHeaderStyle}"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Scale Model" Style="{StaticResource FieldLabelStyle}"/>
                            <ComboBox x:Name="ScaleModelComboBox" Style="{StaticResource FieldComboBoxStyle}">
                                <ComboBoxItem Content="Avery Weigh-Tronix E1310" IsSelected="True"/>
                                <ComboBoxItem Content="Mettler Toledo IND780"/>
                                <ComboBoxItem Content="Cardinal Scale 825"/>
                                <ComboBoxItem Content="Rice Lake RL1380"/>
                            </ComboBox>
                            
                            <TextBlock Text="Communication Port" Style="{StaticResource FieldLabelStyle}"/>
                            <ComboBox x:Name="ComPortComboBox" Style="{StaticResource FieldComboBoxStyle}">
                                <ComboBoxItem Content="COM1" IsSelected="True"/>
                                <ComboBoxItem Content="COM2"/>
                                <ComboBoxItem Content="COM3"/>
                                <ComboBoxItem Content="COM4"/>
                            </ComboBox>
                            
                            <TextBlock Text="Baud Rate" Style="{StaticResource FieldLabelStyle}"/>
                            <ComboBox x:Name="BaudRateComboBox" Style="{StaticResource FieldComboBoxStyle}">
                                <ComboBoxItem Content="9600" IsSelected="True"/>
                                <ComboBoxItem Content="19200"/>
                                <ComboBoxItem Content="38400"/>
                                <ComboBoxItem Content="57600"/>
                            </ComboBox>
                            
                            <TextBlock Text="Data Bits" Style="{StaticResource FieldLabelStyle}"/>
                            <ComboBox x:Name="DataBitsComboBox" Style="{StaticResource FieldComboBoxStyle}">
                                <ComboBoxItem Content="7"/>
                                <ComboBoxItem Content="8" IsSelected="True"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Maximum Capacity (KG)" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox x:Name="MaxCapacityTextBox" Text="100000" Style="{StaticResource FieldTextBoxStyle}"/>
                            
                            <TextBlock Text="Minimum Display (KG)" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox x:Name="MinDisplayTextBox" Text="10" Style="{StaticResource FieldTextBoxStyle}"/>
                            
                            <TextBlock Text="Calibration Factor" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox x:Name="CalibrationFactorTextBox" Text="1.000" Style="{StaticResource FieldTextBoxStyle}"/>
                            
                            <TextBlock Text="Zero Range (KG)" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox x:Name="ZeroRangeTextBox" Text="50" Style="{StaticResource FieldTextBoxStyle}"/>
                            
                            <!-- Connection Test -->
                            <StackPanel Margin="0,20,0,0">
                                <Button Content="🔌 Test Connection" x:Name="TestConnectionButton" 
                                        Style="{StaticResource SaveButtonStyle}" Click="TestConnectionButton_Click"/>
                                <TextBlock x:Name="ConnectionStatusText" Text="Click to test weighbridge connection" 
                                           Foreground="#6C757D" FontSize="12" Margin="0,10,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </StackPanel>
                
                <!-- Database Settings -->
                <StackPanel x:Name="DatabaseSettingsPanel" Visibility="Collapsed">
                    <TextBlock Text="💾 DATABASE CONFIGURATION" Style="{StaticResource SectionHeaderStyle}"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Database Type" Style="{StaticResource FieldLabelStyle}"/>
                            <ComboBox x:Name="DatabaseTypeComboBox" Style="{StaticResource FieldComboBoxStyle}">
                                <ComboBoxItem Content="SQLite (Local)" IsSelected="True"/>
                                <ComboBoxItem Content="SQL Server"/>
                                <ComboBoxItem Content="MySQL"/>
                                <ComboBoxItem Content="PostgreSQL"/>
                            </ComboBox>
                            
                            <TextBlock Text="Database Path" Style="{StaticResource FieldLabelStyle}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="DatabasePathTextBox" Grid.Column="0" Text="weighbridge.db" Style="{StaticResource FieldTextBoxStyle}"/>
                                <Button Grid.Column="2" Content="📁" Padding="10,8" Click="BrowseDatabasePath_Click"/>
                            </Grid>
                            
                            <TextBlock Text="Backup Frequency" Style="{StaticResource FieldLabelStyle}"/>
                            <ComboBox x:Name="BackupFrequencyComboBox" Style="{StaticResource FieldComboBoxStyle}">
                                <ComboBoxItem Content="Daily" IsSelected="True"/>
                                <ComboBoxItem Content="Weekly"/>
                                <ComboBoxItem Content="Monthly"/>
                                <ComboBoxItem Content="Manual Only"/>
                            </ComboBox>
                            
                            <TextBlock Text="Backup Location" Style="{StaticResource FieldLabelStyle}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="BackupLocationTextBox" Grid.Column="0" Text="./Backups" Style="{StaticResource FieldTextBoxStyle}"/>
                                <Button Grid.Column="2" Content="📁" Padding="10,8" Click="BrowseBackupLocation_Click"/>
                            </Grid>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Data Retention (Days)" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox x:Name="DataRetentionTextBox" Text="365" Style="{StaticResource FieldTextBoxStyle}"/>
                            
                            <TextBlock Text="Auto Archive After (Days)" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox x:Name="AutoArchiveTextBox" Text="90" Style="{StaticResource FieldTextBoxStyle}"/>
                            
                            <!-- Database Actions -->
                            <StackPanel Margin="0,20,0,0">
                                <Button Content="🔄 Create Backup Now" x:Name="BackupNowButton" 
                                        Style="{StaticResource SaveButtonStyle}" Click="BackupNowButton_Click" Margin="0,5"/>
                                <Button Content="📤 Export Data" x:Name="ExportDataButton" 
                                        Style="{StaticResource SaveButtonStyle}" Click="ExportDataButton_Click" Margin="0,5"/>
                                <Button Content="🗑️ Clean Old Data" x:Name="CleanDataButton" 
                                        Style="{StaticResource ResetButtonStyle}" Click="CleanDataButton_Click" Margin="0,5"/>
                                <TextBlock x:Name="DatabaseStatusText" Text="Database: Connected | Size: 2.5 MB" 
                                           Foreground="#28A745" FontSize="12" Margin="0,10,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </StackPanel>
                
                <!-- System Settings -->
                <StackPanel x:Name="SystemSettingsPanel" Visibility="Collapsed">
                    <TextBlock Text="🖥️ SYSTEM PREFERENCES" Style="{StaticResource SectionHeaderStyle}"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Language" Style="{StaticResource FieldLabelStyle}"/>
                            <ComboBox x:Name="LanguageComboBox" Style="{StaticResource FieldComboBoxStyle}">
                                <ComboBoxItem Content="English" IsSelected="True"/>
                                <ComboBoxItem Content="Hindi"/>
                                <ComboBoxItem Content="Punjabi"/>
                            </ComboBox>
                            
                            <TextBlock Text="Date Format" Style="{StaticResource FieldLabelStyle}"/>
                            <ComboBox x:Name="DateFormatComboBox" Style="{StaticResource FieldComboBoxStyle}">
                                <ComboBoxItem Content="DD/MM/YYYY" IsSelected="True"/>
                                <ComboBoxItem Content="MM/DD/YYYY"/>
                                <ComboBoxItem Content="YYYY-MM-DD"/>
                            </ComboBox>
                            
                            <TextBlock Text="Weight Unit" Style="{StaticResource FieldLabelStyle}"/>
                            <ComboBox x:Name="WeightUnitComboBox" Style="{StaticResource FieldComboBoxStyle}">
                                <ComboBoxItem Content="Kilograms (KG)" IsSelected="True"/>
                                <ComboBoxItem Content="Tonnes (T)"/>
                                <ComboBoxItem Content="Pounds (LBS)"/>
                            </ComboBox>
                            
                            <TextBlock Text="Theme" Style="{StaticResource FieldLabelStyle}"/>
                            <ComboBox x:Name="ThemeComboBox" Style="{StaticResource FieldComboBoxStyle}">
                                <ComboBoxItem Content="Light" IsSelected="True"/>
                                <ComboBoxItem Content="Dark"/>
                                <ComboBoxItem Content="Auto"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Auto-Save Interval (Minutes)" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox x:Name="AutoSaveIntervalTextBox" Text="5" Style="{StaticResource FieldTextBoxStyle}"/>
                            
                            <TextBlock Text="Session Timeout (Minutes)" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox x:Name="SessionTimeoutTextBox" Text="60" Style="{StaticResource FieldTextBoxStyle}"/>
                            
                            <!-- System Options -->
                            <StackPanel Margin="0,20,0,0">
                                <CheckBox x:Name="StartWithWindowsCheckBox" Content="Start with Windows" Margin="0,5"/>
                                <CheckBox x:Name="MinimizeToTrayCheckBox" Content="Minimize to system tray" Margin="0,5"/>
                                <CheckBox x:Name="ShowNotificationsCheckBox" Content="Show notifications" IsChecked="True" Margin="0,5"/>
                                <CheckBox x:Name="EnableLoggingCheckBox" Content="Enable system logging" IsChecked="True" Margin="0,5"/>
                                <CheckBox x:Name="AutoUpdateCheckBox" Content="Check for updates automatically" IsChecked="True" Margin="0,5"/>
                            </StackPanel>
                            
                            <!-- System Info -->
                            <Border Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="1" 
                                    CornerRadius="5" Padding="15" Margin="0,20,0,0">
                                <StackPanel>
                                    <TextBlock Text="📋 SYSTEM INFORMATION" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <TextBlock Text="Software Version: 2.0.0" FontSize="12"/>
                                    <TextBlock Text="Database Version: 1.5" FontSize="12"/>
                                    <TextBlock Text="Last Updated: 15/06/2024" FontSize="12"/>
                                    <TextBlock x:Name="SystemUptimeText" Text="System Uptime: 2h 15m" FontSize="12"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </StackPanel>
                </Grid>
            </ScrollViewer>
            
            <!-- Action Buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                <Button Content="💾 SAVE SETTINGS" x:Name="SaveSettingsButton" 
                        Style="{StaticResource SaveButtonStyle}" Click="SaveSettingsButton_Click"/>
                <Button Content="🔄 RESET TO DEFAULT" x:Name="ResetSettingsButton" 
                        Style="{StaticResource ResetButtonStyle}" Click="ResetSettingsButton_Click"/>
                <Button Content="📋 EXPORT CONFIG" x:Name="ExportConfigButton" 
                        Style="{StaticResource SaveButtonStyle}" Click="ExportConfigButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>