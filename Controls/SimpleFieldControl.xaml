<UserControl x:Class="WeighbridgeSoftwareYashCotex.Controls.SimpleFieldControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Margin="0,0,0,16">
        <!-- Field Label -->
        <TextBlock x:Name="FieldLabel" FontWeight="SemiBold" FontSize="14" 
                   Foreground="#2C3E50" Margin="0,0,0,6"/>
        
        <!-- Field Input -->
        <Border BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="6" Background="White">
            <ContentPresenter x:Name="InputContent" Margin="12"/>
        </Border>
        
        <!-- Field Description -->
        <TextBlock x:Name="FieldDescription" FontSize="12" Foreground="#7F8C8D" 
                   Margin="0,4,0,0" TextWrapping="Wrap"/>
    </StackPanel>
</UserControl>