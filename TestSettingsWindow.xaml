<Window x:Class="WeighbridgeSoftwareYashCotex.TestSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:WeighbridgeSoftwareYashCotex.Controls"
        Title="Test Settings Fields" Height="600" Width="800">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Test Settings Fields" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            
            <!-- Test Company Name Field -->
            <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Test Field 1: Company Name" FontWeight="Bold"/>
                    <controls:DynamicFieldControl x:Name="TestField1" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Test Dropdown Field -->
            <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Test Field 2: Dropdown" FontWeight="Bold"/>
                    <controls:DynamicFieldControl x:Name="TestField2" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Test Checkbox Field -->
            <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Test Field 3: Checkbox" FontWeight="Bold"/>
                    <controls:DynamicFieldControl x:Name="TestField3" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Debug Info -->
            <Border BorderBrush="Blue" BorderThickness="2" Padding="10" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="Debug Info" FontWeight="Bold" Foreground="Blue"/>
                    <TextBlock x:Name="DebugText" TextWrapping="Wrap" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Window>